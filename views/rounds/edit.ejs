<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs')%> <%-
    include('../partials/functions.ejs')%>
  </head>
  <body>
    <div class="bg-container">
      <%- include('../partials/nav.ejs') %>
      <div class="container">
        <h1 id="heading">Edit round</h1>

        <form action="/tracker/<%= round._id %>?_method=PUT" method="POST">
          <div id="form-details" class="new-form">
            <table>
              <thead>
                <tr>
                  <th><label for="course">Course</label></th>
                  <th><label for="date">Date</label></th>
                  <th><label for="handicap">Handicap</label></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <input
                      type="text"
                      name="course"
                      value="<%= round.course %>"
                    />
                  </td>
                  <td>
                    <input
                      type="date"
                      name="date"
                      value="<%= convertDateEdit(round.date) %>"
                    />
                  </td>
                  <td>
                    <input
                      type="number"
                      name="handicap"
                      value="<%= round.handicap %>"
                    />
                  </td>
                </tr>
              </tbody>
              <br />
            </table>
          </div>
          <div id="form-performance" class="new-form">
            <div id="form-grid" class="grid">
              <p>HOLE</p>
              <% for(let i = 0; i < 18; i++){ %>
              <p><%= i + 1 %></p>
              <% } %>

              <label for="par">PAR</label>
              <% for(let i = 0; i < 18; i++){ %>
              <input
                type="number"
                name="par"
                style="width: 25px"
                value="<%= par[i] %>"
              />
              <% } %>

              <label for="score">SCORE</label>
              <% for(let i = 0; i < 18; i++){ %>
              <input
                type="number"
                name="score"
                style="width: 25px"
                value="<%= score[i] %>"
              />
              <% } %>
            </div>
          </div>
          <!-- submit -->
          <input id="submit" type="submit" name="submit" value="Submit" />
        </form>
        <a id="returnDash" href="/tracker">Return to dashboard</a>
      </div>
    </div>
  </body>
</html>
